{
  "version": "0.0.1",
  "author": "michelada.io",
  "name": "sips-and-bits.css",
  "scripts": {
    "dev": "browser-sync start --server --files \"**/*.css\"",
    "build": "postcss ./src/index.css --dir dist/",
    "watch": "nodemon -x npm run build -w tailwind.config.js -w src/**/*.css -V",
    "start": "run-p dev watch",
    "check": "nodemon --help"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3"
  },
  "devDependencies": {
    "browser-sync": "^2.27.4",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "tailwindcss": "^2.2.4"
  }
}
